class AdvNetwork(nn.Module):
    def __init__(self, V_len):
        super().__init__()

        self.lin = nn.Linear(V_len, V_len)
    
    def forward(self, x):

        I_leak = self.lin(x)
        dt = 0.001 * -(I_leak)
        
        return x + dt

