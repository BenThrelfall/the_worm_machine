class SimpleNetwork(nn.Module):
    def __init__(self, V_len):
        super().__init__()

        self.G_leak = nn.Parameter(torch.ones(V_len) * 10)
        self.E_leak = nn.Parameter(torch.ones(V_len) * -35)
    
    def forward(self, x):

        I_leak = self.G_leak * (x - self.E_leak)
        dt = 0.001 * -(I_leak)
        
        return x + dt

